{
  "compilerOptions": {
    // File Layout - ADD THESE:
    "rootDir": ".",
    "outDir": "./dist",

    // Environment Settings
    "module": "nodenext",
    "target": "esnext",
    "lib": ["ES2020"],
    "types": ["node"],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true

    // Remove react-specific options since this is a Node.js project:
    // "jsx": "react-jsx",  // REMOVE THIS LINE
  },
  "include": ["server.ts", "src/**/*", "src/generated/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
